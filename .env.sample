# =========================
# Required Discord Settings
# =========================
DISCORD_TOKEN='PasteYourDiscordBotTokenHere'

# ========================
# Auth and Session Settings
# ========================
# Optional auth. If admin/user credentials are set, requests require login.
# Use a strong random value (32+ chars) for SESSION_SECRET.
# AUTH_ADMIN_* are required for admin access.
# AUTH_READONLY_* are optional for standard user access.
AUTH_READONLY_USER=
AUTH_READONLY_PASS=
AUTH_ADMIN_USER=
AUTH_ADMIN_PASS=
SESSION_SECRET=
LOGIN_REMEMBER_DAYS=30
SESSION_DIR=./sessions

# ===================
# Audio File Behavior
# ===================
# Category folder name used for overlay noises.
NOISES_FOLDER=!noises

# =================
# Network and Ports
# =================
WEB_PORT=3000
BOT_PORT=3001

# Next.js backend proxy target (used by web process for /api rewrites).
# Keep this aligned with BOT_PORT when running locally.
BACKEND_URL=http://localhost:3001

# ======================
# Uploads and Rate Limit
# ======================
UPLOAD_MAX_MB=50
RATE_LIMIT_AUDIO=120
RATE_LIMIT_FILES=60
RATE_LIMIT_AUDIO_STATUS=600
RATE_LIMIT_PLAYLIST=120

# ============
# CORS (Optional)
# ============
# Comma-separated list of allowed origins. Leave blank if UI and API are same host.
CORS_ORIGINS=

# ==========================
# Session File Retry Tuning
# ==========================
# Advanced settings, mainly for Windows file-lock races.
SESSION_FILE_RETRIES=5
SESSION_FILE_RETRY_FACTOR=1
SESSION_FILE_RETRY_MIN_MS=50
SESSION_FILE_RETRY_MAX_MS=200
SESSION_WRITE_RETRIES=6
